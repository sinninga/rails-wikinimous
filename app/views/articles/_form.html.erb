<%= form_for(@article) do |form| %>
<div class="form-group">
  <%= form.label :title %>
  <%= form.text_field :title, class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
  <%= form.label :content %>
  <%= form.text_field :content, class: 'form-control' %>
  </div>
  <br>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>
